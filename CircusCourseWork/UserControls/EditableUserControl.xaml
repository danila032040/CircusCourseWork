<UserControl x:Class="CircusCourseWork.UserControls.EditableUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CircusCourseWork.UserControls"
             xmlns:viewModels="clr-namespace:CircusCourseWork.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance viewModels:EditableUserControlViewModel}">
    <StackPanel Margin="25" Background="Bisque">
        <Label Content="{Binding UserName}"/>
        <Button Content="Удалить" Click="ButtonDelete_OnClick" Margin="25"/>
    </StackPanel>
</UserControl>
